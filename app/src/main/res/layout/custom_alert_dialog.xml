<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:background="@drawable/alert_dialog">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_blue_solid"
                android:padding="@dimen/_5sdp"
                android:tint="#ffffff"
                android:src="@drawable/ic_faq" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textSize="@dimen/_14ssp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your changes will be lost and cannot be undone, would you like to continue?"
            android:textColor="#000000"
            android:layout_below="@+id/layout_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_11ssp" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:padding="@dimen/_5sdp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok, cool"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/tv_cancel"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/button_white_solid_less_corner"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>